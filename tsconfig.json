{
    "include": [
        "lib/**/*.ts"
    ],
    "compilerOptions": {
        "target": "es2016",
        "lib": [
            "es6"
        ],
        "module": "commonjs",
        "rootDir": ".",
        "baseUrl": "./",
        "resolveJsonModule": true,
        "allowJs": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "noImplicitAny": true,
        "types": [
            "node"
        ]
    }
}